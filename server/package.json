{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend server for dynamic dashboard",
  "main": "dist/main.js",
  "scripts": {
    "clean": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true});}catch(e){}\"",
    "build:dev": "npm run clean && npx nest build || (echo 'nest build failed; falling back to tsc' && node_modules/.bin/tsc -p tsconfig.json)",
  "build:ci": "npm run clean && (npx nest build --config nest-cli.json || node_modules/.bin/tsc -p tsconfig.build.json) && node -e \"require('fs').statSync('dist/main.js')\" && npx tsc -p tsconfig.build.json --listEmittedFiles --pretty false > dist/.emit-log.txt",
    "build": "if [ -d dist ] && [ -f dist/main.js ]; then echo 'dist already built'; else echo 'No dist found; cannot compile in prod (dev deps absent).'; exit 0; fi",
    "start": "NODE_ENV=development nest start --watch",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "backfill": "npm run build && node dist/scripts/backfill-dashboard-config.js",
    "seed:meta": "node dist/scripts/seed-meta-samples.js",
    "seed:demo": "node dist/scripts/seed-demo-app.js",
    "backfill:planhash": "node dist/scripts/backfill-plan-hash.js",
  "lint": "eslint .  '**/*.ts'",
    "format": "eslint . --fix '**/*.ts'"
  },
  "dependencies": {
  "@nestjs/common": "11.0.0",
  "@nestjs/core": "11.0.0",
  "@nestjs/platform-express": "11.0.0",
  "@nestjs/platform-ws": "11.0.0",
  "@nestjs/websockets": "11.0.0",
  "@nestjs/config": "4.0.0",
  "@nestjs/typeorm": "11.0.0",
  "@nestjs/mongoose": "11.0.0",
    "mongoose": "^8.6.0",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "@nestjs/mapped-types": "^2.0.5",
    "typeorm": "^0.3.24",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "cookie-parser": "^1.4.7",
    "compression": "^1.8.0",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
  "@nestjs/cli": "11.0.0",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.4.20",
    "@types/node": "^24.0.1",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16"
  },
  "author": "Your Name",
  "license": "ISC"
}
